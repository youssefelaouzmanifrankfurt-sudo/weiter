    .g-link.active { background: rgba(16, 185, 129, 0.15); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2); }

    /* --- BADGES (Die roten Kreise) --- */
    .nav-badge {
        position: absolute;
        top: 0px; 
        right: 0px;
        background: #ef4444; /* Rot f√ºr Chat */
        color: white;
        font-size: 0.65rem;
        font-weight: bold;
        min-width: 18px;
        height: 18px;
